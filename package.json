{
  "name": "rpmdev",
  "displayName": "rpmdev",
  "description": "",
  "version": "0.0.1",
  "publisher": "wngtk",
  "repository": {
    "type": "git",
    "url": "https://github.com/wngtk/vscode-rpmdev"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "rpmdev",
      "properties": {
        "rpmdev.userstring": {
          "type": "string",
          "default": "",
          "description": "User string for rpmdev-bumpspec command (e.g. 'John Doe <john.doe@example.com>')"
        }
      }
    },
    "commands": [
      {
        "command": "rpmdev.bumpspec",
        "title": "Bumpspec: Increase release number and add changelog"
      }
    ],
    "languages": [
      {
        "id": "RPMSpec",
        "aliases": [
          "RPM Spec",
          "RPMSpec"
        ],
        "extensions": [
          ".spec"
        ],
        "configuration": "./RPMSpec.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "RPMSpec",
        "scopeName": "source.spec",
        "path": "./syntaxes/spec.json"
      }
    ],
    "keybindings": [
      {
        "command": "rpmdev.bumpspec",
        "key": "f10",
        "when": "editorLangId == RPMSpec"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
